@page
@model Event_Applikation.Pages.Events.CreateModel
@{
}


<h1>Opret Nyt Event</h1>
@* <link rel="stylesheet" href="~/css/site.css /> *@
<body>
    <form method="post">
        <div class="form-group">
            <label asp-for="NewEvent.Titel" class="control-label">Titel</label>
            <input asp-for="NewEvent.Titel" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewEvent.Beskrivelse" class="control-label">Beskrivelse</label>
            <textarea asp-for="NewEvent.Beskrivelse" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="NewEvent.Lokation" class="control-label">Lokation</label>
            <input asp-for="NewEvent.Lokation" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewEvent.Dato" class="control-label">Dato</label>
            <input asp-for="NewEvent.Dato" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewEvent.Starttid" class="control-label">Start tidspunkt</label>
            <input asp-for="NewEvent.Starttid" type="time" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewEvent.Sluttid" class="control-label">Slut tidspunkt</label>
            <input asp-for="NewEvent.Sluttid" type="time" class="form-control" />
        </div>
        <div class="form-group">
            <input type="checkbox" asp-for="NewEvent.Antalsbegrænsning" />
            <label asp-for="NewEvent.Antalsbegrænsning" class="control-label">Antalsbegrænsning</label>
        </div>
        <div class="form-group">
            <label asp-for="NewEvent.MaxDeltager" class="control-label">Max Antal Deltagere <em>(hvis Antalsbegrænsning)</em></label>
            <input asp-for="NewEvent.MaxDeltager" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewEvent.KategoriId" class="control-label">Kategori</label>
            <select asp-for="NewEvent.KategoriId" asp-items="Model.KategoriList" class="form-control">
                <option value="">-- Vælg en kategori --</option>
            </select>
            <span asp-validation-for="NewEvent.KategoriId" class="text-danger"></span>
        </div>
        <p>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" asp-page-handler="Submit">Opret</button>
        </div>
        </p>
    </form>
</body>
