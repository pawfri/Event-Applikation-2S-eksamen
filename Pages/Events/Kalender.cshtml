@page
@model Event_Applikation.Pages.Events.KalenderModel
@{
}

<h1 class="title">Kalender – @Model.AktuelMåned.ToString("MMMM yyyy")</h1>

<div class="nav-buttons">
    <a asp-page="Kalender" asp-route-måned="@Model.VisForrigeMåned().Month" asp-route-år="@Model.VisForrigeMåned().Year">Forrige</a>
    <a asp-page="Kalender" asp-route-måned="@Model.VisDenneMåned().Month" asp-route-år="@Model.VisDenneMåned().Year">Denne måned</a>
    <a asp-page="Kalender" asp-route-måned="@Model.VisNæsteMåned().Month" asp-route-år="@Model.VisNæsteMåned().Year">Næste</a>
</div>

<div class="container">
    <div class="row">
        @foreach (var elem in Model.Data)
        {
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <div class="card-date"> @elem.Dato.ToString("dd. MMMM yyyy")</div>
                        <div class="card-title">@elem.Titel</div>
                        <div class="card-detail"><b>@elem.Kategori.Type</b></div>
                        <div class="card-detail"><b>Tid:</b> kl. @elem.Starttid.ToString("HH:mm") - @elem.Sluttid.ToString("HH:mm")</div>
                        <div class="card-detail"><b>Sted:</b> @elem.Lokation</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        font-family: sans-serif;
    }

    .title {
        font-size: 2rem;
        margin-bottom: 10px;
        text-align: center;
    }

    .nav-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 30px;
    }

    .nav-arrow {
        background-color: #eee;
        padding: 8px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        color: #333;
    }

        .nav-arrow:hover {
            background-color: #ccc;
        }

    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        max-width: 1000px;
        margin: 0 auto;
    }

    .col {
        flex: 0 1 calc(33.333% - 20px);
        max-width: calc(33.333% - 20px);
        min-width: 320px;
        box-sizing: border-box;
        margin-bottom: 20px;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        background-color: white;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 220px;
        width: 100%;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        gap: 8px;
        flex-grow: 1;
    }

    .card-date {
        font-size: 1.5rem;
        font-weight: bold;
        color: #555;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #222;
    }

    .card-detail {
        font-size: 0.95rem;
        color: #444;
    }

    .create-btn {
        display: inline-block;
        margin-top: 30px;
        padding: 10px 20px;
        border: 2px solid #007bff;
        border-radius: 6px;
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        .create-btn:hover {
            background-color: #007bff;
            color: white;
        }
</style>